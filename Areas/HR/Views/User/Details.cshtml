@model ST10287116_PROG6212_POE_P2.Models.User
@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>User Details</h2>
<dl class="row">
  <dt class="col-sm-2">Name</dt><dd class="col-sm-10">@Model.Name @Model.Surname</dd>
  <dt class="col-sm-2">Email</dt><dd class="col-sm-10">@Model.Email</dd>
  <dt class="col-sm-2">Role</dt><dd class="col-sm-10">@Model.Role</dd>
  <dt class="col-sm-2">Hourly Rate</dt><dd class="col-sm-10">@Model.HourlyRate</dd>
</dl>
<a asp-action="Index" class="btn btn-secondary">Back</a>