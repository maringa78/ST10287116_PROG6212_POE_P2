@using ST10287116_PROG6212_POE_P2.Models
@model IEnumerable<ST10287116_PROG6212_POE_P2.Models.Claim>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard - ClaimIT";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        </div>
        @if (Context.Session.GetString("UserId") == null)
        {
            <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-sm btn-primary ms-2">Login</a>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Claim Submission Form</h5>
            </div>
            <div class="card-body">
                <form asp-area="" asp-action="Submit" asp-controller="Claims" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Claim Type</label>
                        <select name="Type" class="form-select" required>
                            <option value="">Select claim type</option>
                            <option value="Travel">Travel</option>
                            <option value="Equipment">Equipment</option>
                            <option value="Research">Research</option>
                            <option value="Conference">Conference</option>
                            <option value="Development">Development</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Claim Date</label>
                        <input type="date" class="form-control" name="ClaimDate" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Amount (e.g., 250.00)</label>
                        <input type="number" step="0.01" class="form-control" name="Amount" placeholder="250.00" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Hours Worked</label>
                        <input type="number" class="form-control" name="HoursWorked" id="HoursWorked" min="0" max="180" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Supporting Documents</label>
                        <input type="file" name="files" multiple class="form-control" accept=".pdf,image/*" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" rows="3" name="Description" placeholder="Provide a detailed description of your claim..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Claim</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Claim Status</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-sm mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Claim Type</th>
                            <th>Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model.Take(5))
                            {
                                <tr>
                                    <td>@item.ClaimId</td>
                                    <td>@item.ClaimDate.ToString("yyyy-MM-dd")</td>
                                    <td>@item.Type</td>
                                    <td>R@item.Amount</td>
                                    <td>
                                        <span class="badge @(item.Status == ClaimStatus.Approved ? "bg-success" : item.Status == ClaimStatus.Pending ? "bg-warning" : item.Status == ClaimStatus.Verified ? "bg-info" : "bg-danger")">
                                            @item.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No claims submitted yet</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex justify-content-between p-2 small text-muted">
                    <a asp-area="" asp-controller="Claims" asp-action="Status">View All</a>
                </div>
            </div>
        </div>
    </div>
</div>